---
import { getCollection } from 'astro:content';

// 获取所有文章
const posts = await getCollection('posts');

// 按目录结构组织文章
const categories = {
  '文章': posts.filter(post => !post.slug.includes('/')),
  '瑜伽经': posts.filter(post => post.slug.startsWith('yoga-sutra/')),
};

// 按weight排序
Object.keys(categories).forEach(key => {
  categories[key].sort((a, b) => (a.data.weight || 999) - (b.data.weight || 999));
});
---

<nav class="w-80 bg-white shadow-lg h-screen overflow-y-auto fixed left-0 top-0 border-r border-gray-200">
  <div class="p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-8">
      <a href="/" class="hover:text-blue-600 transition-colors">永恒的信息</a>
    </h1>
    
    <!-- 导航菜单 -->
    <div class="space-y-6">
      {Object.entries(categories).map(([categoryName, categoryPosts]) => (
        <div>
          <h2 class="text-lg font-semibold text-gray-700 mb-3 border-b border-gray-200 pb-2">
            {categoryName}
          </h2>
          <ul class="space-y-2">
            {categoryPosts.map(post => (
              <li>
                <a 
                  href={`/posts/${post.slug}`}
                  class="block px-3 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors text-sm"
                >
                  {post.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <!-- 修行指导 -->
      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-3 border-b border-gray-200 pb-2">
          修行指导
        </h2>
        <ul class="space-y-2">
          <li>
            <a 
              href="/practice"
              class="block px-3 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors text-sm"
            >
              修行指导
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
