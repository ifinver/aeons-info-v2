---
import { getCollection } from 'astro:content';

// 获取所有文章
const posts = await getCollection('posts');

// 按目录结构组织文章
const blogPosts = posts.filter(post => !post.slug.includes('/'));

// 暂时隐藏的瑜伽经文章标题
const hiddenYogaTitles = [
  '站点翻译版',
  'translate by Swami Jnaneshvara Bharati'
];

const yogaSutraPosts = posts
  .filter(post => post.slug.startsWith('yoga-sutra/'))
  .filter(post => !hiddenYogaTitles.includes(post.data.title));

// 按weight排序
blogPosts.sort((a, b) => (a.data.weight || 999) - (b.data.weight || 999));
yogaSutraPosts.sort((a, b) => (a.data.weight || 999) - (b.data.weight || 999));
---

<nav class="w-80 bg-white shadow-lg h-screen overflow-y-auto fixed left-0 top-0 border-r border-gray-200">
  <div class="p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-8">
      <a href="/" class="hover:text-blue-600 transition-colors">永恒的信息</a>
    </h1>
    
    <!-- 导航菜单 -->
    <div class="space-y-6">
      <!-- 博文分类 -->
      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-3 border-b border-gray-200 pb-2">
          博文
        </h2>
        
        <ul class="space-y-0.5">
          <!-- 主要博文 -->
          {blogPosts.map(post => (
            <li>
              <a 
                href={`/posts/${post.slug}`}
                class="block px-3 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors text-sm"
              >
                {post.data.title}
              </a>
            </li>
          ))}
          
          <!-- 瑜伽经作为普通列表项 -->
          <li>
            <div class="px-3 py-2 text-gray-600 text-sm font-medium">
              瑜伽经
            </div>
            <ul class="ml-2 space-y-0.5 mt-1">
              {yogaSutraPosts.map(post => (
                <li>
                  <a 
                    href={`/posts/${post.slug}`}
                    class="block px-3 py-1 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors text-sm"
                  >
                    {post.data.title}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        </ul>
      </div>
      
      <!-- 练习节点 -->
      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-3 border-b border-gray-200 pb-2">
          练习
        </h2>
        <ul class="space-y-1">
          <li>
            <div class="block px-3 py-2 text-gray-400 text-sm cursor-not-allowed">
              练功计时器 - 开发中
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
