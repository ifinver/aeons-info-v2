---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import MainContent from '../components/MainContent.astro';
import { getCollection } from 'astro:content';

// 尝试获取 practice 集合的内容
let practiceEntry = null;
try {
  const practiceCollection = await getCollection('practice');
  practiceEntry = practiceCollection.find(entry => entry.slug.includes('zh'));
} catch (error) {
  console.log('Practice collection not found or empty');
}
---

<Layout title="修行指导 - 永恒的信息">
  <div class="flex">
    <Navigation />
    <MainContent 
      title="修行指导"
      summary="系统的灵性修行方法和实践建议"
    >
      {practiceEntry ? (
        <div>
          {/* Render the practice content */}
          <div>修行指导内容正在整理中...</div>
        </div>
      ) : (
        <div>
          <h2>修行指导</h2>
          <p>修行指导内容正在整理中，请稍后查看。</p>
        </div>
      )}
    </MainContent>
  </div>
</Layout>
